{% extends '::base.html.twig' %}

{% block title %}Search people near you{% endblock %}

{% block body %}

    {% include 'PageBundle:Segment:navbar_top.html.twig' with {'active':'search'} %}

    <div class="main container">

        {% include 'PageBundle::flash_messages.html.twig' with {'messages':app.session.flashbag.all()} %}

        <div class="row-fluid">
            <div class="span12 well well-small">
                {% include 'SearchBundle:Form:search_people_form.html.twig' with {'form':form} %}
            </div>
        </div>

        <div class="row-fluid">
            {% if results %}
                {% for result in results %}
                    {% if loop.index % 4 == 1 %}
                        <ul class="thumbnails">
                    {% endif %}
                    <li class="span3">
                        <div class="thumbnail">
                            <a href="{{ path('profile', {'id':result.user.id}) }}" data-ajax>
                                {% media user_picture(result.user), 'search' with {'title':'','class':'user-picture'} %}
                            </a>

                            <div class="caption">
                                <h5>{{ result.user.name }} <span class="label">{{ result.user.profile.age }}</span>
                                    {% if result.user.profile.city is not empty %}
                                        <small class="">{{ result.user.profile.city.name }}</small>
                                    {% endif %}
                                </h5>
                                <a href="{{ path('profile', {'id':result.user.id}) }}" data-ajax class="btn btn-primary btn-small">Profile</a>

                                <div class="btn-group pull-right">

                                    <a href="#" data-ajax class="btn btn-small"><i class="icon-camera"></i> Photos</a>
                                    <button class="btn dropdown-toggle btn-small" data-toggle="dropdown">
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Profile photos <span class="badge badge-info">1</span></a></li>
                                        <li><a href="#">Public photos <span class="badge">12</span></a></li>
                                        <li><a href="#">Private photos <span class="badge badge-important">6</span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </li>
                    {% if loop.index % 4 == 0 or loop.last %}
                        </ul>
                    {% endif %}
                {% endfor %}
                <div class="pagination">
                    <ul>
                        {% if paginator.previous is defined %}
                            <li><a data-ajax href="{{ path('search', {'page':paginator.previous}) }}">«</a></li>
                        {% else %}
                            <li class="disabled"><a>«</a></li>
                        {% endif %}

                        {% if paginator.first < paginator.firstPageInRange %}
                            <li><a data-ajax href="{{ path('search', {'page':paginator.first}) }}">{{ paginator.first }}</a></li>
                            <li class="disabled"><a>…</a></li>
                        {% endif %}

                        {% for pageNumber in paginator.pagesInRange %}
                            {% if pageNumber == paginator.current %}
                                <li class="active"><a data-ajax href="{{ path('search', {'page':pageNumber}) }}">{{ pageNumber }}</a></li>
                            {% else %}
                                <li><a data-ajax href="{{ path('search', {'page':pageNumber}) }}">{{ pageNumber }}</a></li>
                            {% endif %}
                        {% endfor %}

                        {% if paginator.last > paginator.lastPageInRange %}
                            {# <li class="disabled"><a>…</a></li> #}
                            {# <li><a data-ajax href="{{ path('search', {'page':paginator.last}) }}">{{ paginator.last }}</a></li> #}
                        {% endif %}

                        {% if paginator.next is defined %}
                            <li><a data-ajax href="{{ path('search', {'page':paginator.next}) }}">»</a></li>
                        {% else %}
                            <li class="disabled"><a>»</a></li>
                        {% endif %}
                    </ul>
                </div>
            {% else %}
                Where is everyone?
            {% endif %}
        </div>
    </div>

{% endblock %}