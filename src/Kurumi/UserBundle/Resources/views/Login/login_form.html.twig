<form action="{{ path("login_check") }}" method="post">
    {% spaceless %}
    <div class="control-group">
        <label for="email" class="required control-label">{{ 'form.login.email'|trans }}</label>

        <div class=" controls">
            <input type="text" id="email" name="email" required="required">
        </div>
    </div>
    <div class="control-group">
        <label for="password" class=" required control-label">{{ 'form.login.password'|trans }}</label>

        <div class="controls">
            <input type="password" id="password" name="password" required="required">
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" id="remember_me" name="remember_me"
                       class="" checked="checked"> {{ 'form.login.remember_me'|trans }}</label>
        </div>
    </div>

    <input type="hidden" id="_token" name="_token"
           value="{{ csrf_token('authenticate') }}">

    <button class="btn" type="submit" id="_submit" name="_submit">{{ 'form.login.log_in'|trans }}</button>
    {% endspaceless %}
</form>