{% extends 'UserBundle:Account:page.html.twig' %}

{% block edit_account %}
<div class="row">
    <div class="span3">
        {% include 'UserBundle:Account:sidebar.html.twig' with {'active':'account_edit_password'} %}
    </div>
    <div class="span9">

        {% include 'PageBundle::flash_messages.html.twig' with {'messages':app.session.flashbag.all()} %}

        <fieldset>
            <legend>{% if user.password is null %}Set your password{% else %}Change your password{% endif %}</legend>
            {% include 'UserBundle:Form:edit_user_password_form.html.twig' with {'form':form} %}
        </fieldset>
    </div>
</div>
{% endblock %}