{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if value is not empty %}
        {% for oauth in value %}
            {% if oauth.name == 'facebook' %}
                <img src="{{ asset('bundles/user/images/oauth/facebook_16.png') }}" alt=""/>
                {% elseif oauth.name == 'google' %}
                <img src="{{ asset('bundles/user/images/oauth/google_16.png') }}" alt=""/>
                {% elseif oauth.name=='yahoo' %}
                <img src="{{ asset('bundles/user/images/oauth/yahoo_16.png') }}" alt=""/>
                {% elseif oauth.name=='windows_live' %}
                <img src="{{ asset('bundles/user/images/oauth/windows_16.png') }}" alt=""/>
            {% else %}
                {{ oauth.name|capitalize }}
            {% endif %}
        {% endfor %}
    {% else %}
        {# No OAuth identities #}
    {% endif %}
{% endblock %}