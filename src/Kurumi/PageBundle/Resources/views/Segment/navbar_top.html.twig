                    <li class="divider"></li>
                    <li><a href="{{ logout_url(main_firewall_name) }}" data-ajax>Log out</a></li>
                </ul>
            </div>
            <div class="divider-vertical pull-right"></div>
            <p class="navbar-text pull-right">
                <a href="{{ path('payment') }}" data-ajax class="label label-info">0 credits</a>
            </p>
        </div>
