    <div class="navbar-inner">
        <div class="container">
            <a class="brand">{{ site_name }}</a>

            <ul class="nav">
                <li class="{{ active == 'play' ? 'active' : '' }}"><a data-ajax href="{{ path('play') }}"><i class="icon-star"></i> Play</a></li>
                <li class="{{ active == 'search' ? 'active' : '' }}"><a data-ajax href="{{ path('search') }}"><i class="icon-globe"></i> Search</a></li>
