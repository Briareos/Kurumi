{% extends '::base.html.twig' %}

{% block body %}

    {% include ':Segment:navbar_top.html.twig' %}

    <div class="container main profile-page {{ own_profile ? 'profile-page-own' }}">
        <h1>
            {{ profile.user.name }}
            <small>
                {%- if profile.age -%}
                    {{ profile.age }}
                {%- endif -%}
                {%- if profile.city -%}
                    , {{ profile.city.name }}
                {%- endif -%}
            </small>
        </h1>
        <div class="row">
            <div class="span9">
                <div class="row-fluid">
                    <div class="span4">
                        {% if own_profile %}
                            <a href="{{ path('account_edit_picture') }}" data-ajax data-modal>
                                {{ profile_picture(profile, 'profile') }}
                            </a>
                        {% else %}
                            <a href="#">
                                {{ profile_picture(profile, 'profile') }}
                            </a>
                        {% endif %}
                    </div>
                    <div class="span8">
                        <div data-pjax-container="{{ pjax_container }}">
                            {% block profile_page %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="span3">
                <ul class="nav nav-tabs nav-stacked">
                    <li>
                        <a data-ajax href="#">
                            Recent visitors
                            <span class="badge pull-right"">2</span>
                            <div class="clearfix"></div>
                        </a>
                    </li>
                    <li>
                        <a data-ajax href="#">
                            Who likes me
                            <span class="badge pull-right"">2</span>
                            <div class="clearfix"></div>
                        </a>
                    </li>
                    <li>
                        <a data-ajax href="#">
                            Who I like
                            <span class="badge-empty pull-right">0</span>

                            <div class="clearfix"></div>
                        </a>
                    </li>
                    <li>
                        <a data-ajax href="#">
                            Mutual attractions
                            <span class="badge pull-right"">2</span>
                            <div class="clearfix"></div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}