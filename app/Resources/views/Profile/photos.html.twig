{% extends ':Profile:layout.html.twig' %}

{% block profile_page %}

    {% include '::flash_messages.html.twig' %}

    {% include ':Profile:tabs.html.twig' %}

    <fieldset>
        <legend>
            Profile photos
            <span class="badge badge-info">{{ profile_info.countProfilePhotos(profile) }}</span>
        </legend>
        <a href="{{ path('profile_photo_add',{'type':'profile','id':profile.id}) }}" data-ajax class="btn btn-small pull-right"><i class="icon-upload"></i> Upload</a>
        {% if profile_info.hasProfilePhotos(profile) %}

        {% else %}
            <p>
                <i class="icon-info-sign"></i>
                {% if own_profile %}
                    You do not have any profile photos yet.
                {% else %}
                    {{ "%name% does not have any profile photos yet."|trans({'%name%':profile.user.name}) }}
                {% endif %}
            </p>
        {% endif %}
    </fieldset>
    <fieldset>
        <legend>
            Public photos
            <span class="badge badge-info">{{ profile_info.countPublicPhotos(profile) }}</span>
        </legend>
        <a href="{{ path('profile_photo_add',{'type':'public','id':profile.id}) }}" data-ajax class="btn btn-small pull-right"><i class="icon-upload"></i> Upload</a>
        {% if profile_info.hasPublicPhotos(profile) %}

        {% else %}
            <p>
                <i class="icon-info-sign"></i>
                {% if own_profile %}
                    You do not have any public photos yet.
                {% else %}
                    {{ "%name% does not have any public photos yet."|trans({'%name%':profile.user.name}) }}
                {% endif %}
            </p>
        {% endif %}
    </fieldset>
    <fieldset>
        <legend>
            Private photos
            <span class="badge badge-info">{{ profile_info.countPrivatePhotos(profile) }}</span>
        </legend>
        <a href="{{ path('profile_photo_add',{'type':'private','id':profile.id}) }}" data-ajax class="btn btn-small pull-right"><i class="icon-upload"></i> Upload</a>
        {% if profile_info.hasPrivatePhotos(profile) %}

        {% else %}
            <p>
                <i class="icon-info-sign"></i>
                {% if own_profile %}
                    You do not have any private photos yet.
                {% else %}
                    {{ "%name% does not have any private photos yet."|trans({'%name%':profile.user.name}) }}
                {% endif %}
            </p>
        {% endif %}
    </fieldset>

{% endblock %}