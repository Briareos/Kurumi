            <div class="btn-group pull-right">
                <a class="btn dropdown-toggle" data-toggle="dropdown"><i
                        class="icon-user"></i> {{ user.name }} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('edit_account') }}" data-ajax>{% media user_picture(user), 'thumbnail' with {'title':''} %} Edit profile</a></li>
