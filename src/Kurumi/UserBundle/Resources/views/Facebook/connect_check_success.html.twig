{% extends 'UserBundle:Facebook:connect_base.html.twig' %}

{% block body %}
<script type="text/javascript">
    if(window.opener) {
        window.opener.OAuthCallback('{{ path('facebook_connect_finalize') }}');
        self.close();
    } else {
        window.location.href = '{{ path('facebook_connect_finalize') }}';
    }
</script>
{% endblock %}